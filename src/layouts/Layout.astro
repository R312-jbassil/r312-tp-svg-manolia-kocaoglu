---
import "../styles/global.css";
import { ui } from "../i18n/ui.js";

const locale = Astro.locals.lang as 'en' | 'fr' ?? 'en';
console.log('Locale in index:', locale);
---
<!doctype html>
<html lang="en" class="h-full" data-theme="nord">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="h-full">
		<ul class="menu menu-horizontal bg-base-200">
			<li><a href="/">{ui[locale].nav.home}</a></li>
			<li><a href="generate">{ui[locale].nav.generator}</a></li>
			<li><a href="gallery">{ui[locale].nav.gallery}</a></li>
			<form method="POST" action={Astro.url.pathname}>
				<select name="language" class="select" onchange="this.form.submit()">
					<option disabled selected="true">Language</option>
					<option value="en">English</option>
					<option value="fr">Fran√ßais</option>
				</select>
			</form>
		  </ul>
		<div class="h-full flex flex-col min-h-0">
			<div class="flex-1 min-h-0">
				<slot />
			</div>
		</div>

	</body>
</html>